@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/Shared/UserLayout.cshtml";
}
@{
    int count = 0;
}
<div class="container-fluid">
    <div class="card-header">
        <h3 class="card-title">
            <b>Blog List</b>
        </h3>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-hover text-decoration-none">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Header</th>
                    <th>Description</th>
                    <th>Created Date</th>
                    <th>Status</th>
                    <th>Update</th>
                    <th>Delete</th>
                    <th>Headers</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td><b>@count</b></td>
                        <td>@item.Title</td>
                        <td class="text-danger">@item.Header</td>
                        <td>@item.Description</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.Status</td>
                        <td>
                            <a href="/Blog/UpdateBlog/@item.BlogId" class="btn btn-outline-primary sm">Update</a>
                        </td>
                        <td>
                            <a href="/Blog/DeleteBlog/@item.BlogId" class="btn btn-outline-danger sm">Delete</a>
                        </td>
                        <td>
                            <a href="/Blog/ContentByCategory/@item.BlogId" class="btn btn-outline-info sm">Blog</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div style="margin-top:1rem">
            <a href="/User/Blog/CreateBlog" class="btn btn-outline-primary col-md-12">Create New Blog</a>
        </div>
    </div>
</div>
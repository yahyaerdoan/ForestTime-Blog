@model List<RoleAssingViewModel>
@{
    ViewData["Title"] = "AssingRole";
    Layout = "~/Areas/User/Views/Shared/UserLayout.cshtml";
}

<h1>Role List</h1>

<form method="post" action="">
  @for (int i = 0; i < Model.Count; i++)
  {
      <div class="form-check">
          <input type="hidden" asp-for="@Model[i].RoleId" />  
          <input type="hidden" asp-for="@Model[i].RoleName" />  
          <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" id="roleExist-@i" />  
          <label class="form-check-label" for="roleExist-@i"> @Model[i].RoleName </label>
      </div>
  }
  <button class="btn btn-primary">Assign Role</button>
</form>
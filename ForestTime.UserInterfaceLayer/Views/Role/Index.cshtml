@model List<Role>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/Shared/UserLayout.cshtml";
}
@{
    int count = 0;
}
<div class="container-fluid">
    <div class="card-header">
        <h3 class="card-title">
            <b>Role List</b>
        </h3>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-hover text-decoration-none">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Id</th>
                    <th>Role Name</th>
                    <th>Normalized Name</th>
                    <th>ConcurrencyStamp</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td><b>@count</b></td>
                        <td>@item.Id</td>
                        <td class="text-danger">@item.Name</td>
                        <td>@item.NormalizedName</td>
                        <td>@item.ConcurrencyStamp</td>
                     
                        <td>
                            <a href="/Role/UpdateRole/@item.Id" class="btn btn-outline-primary sm">Update</a>
                        </td>
                        <td>
                            <a href="/Role/DeleteRole/@item.Id" class="btn btn-outline-danger sm">Delete</a>
                        </td>                   
                    </tr>
                }
            </tbody>
        </table>
        <div style="margin-top:1rem">
            <a href="/Role/CreateRole" class="btn btn-outline-primary col-md-12">Create New Blog</a>
        </div>
    </div>
</div>

